                        </ul>
                    </li>
                    <li>

                    </li>
                        @*if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Admin", "AdminController")
                        }*@
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
