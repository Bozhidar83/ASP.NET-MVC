@model PhotoContest.Web.Models.BindingModel.ImageBindingModel
@{
    ViewBag.Title = "Upload Image";
}

<div id="upload-form-container">

    @using (Html.BeginForm("Upload", "Pictures", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h1>Upload photo</h1>
        <hr />
        <fieldset>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <input type="hidden" name="contestId" value="@ViewBag.ContestId">
            <div class="form-group">
                @Html.LabelFor(c => c.Title)
                @Html.TextBoxFor(c => c.Title, new { @class = "form-control" })
                @Html.TextBoxFor(m => m.Photo, new { type = "file" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Upload" />
                </div>
            </div>
        </fieldset>
    }
</div>



